{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "ready - started server on|Local:"
        }
      }
    },
    {
      "label": "Backend: Dev",
      "type": "shell",
      "command": "npm run start:dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Watching for file changes|Nest application successfully started"
        }
      }
    },
    {
      "label": "Scraper: Run",
      "type": "shell",
      "command": "${workspaceFolder}/scraper/.venv/bin/python",
      "args": [
        "${workspaceFolder}/scraper/test_selenium.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}/scraper"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run All: Frontend + Backend + Scraper",
      "dependsOn": [
        "Frontend: Dev",
        "Backend: Dev",
        "Scraper: Run"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
